{
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++-7 build active file ver(1)",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-std=c++11",
